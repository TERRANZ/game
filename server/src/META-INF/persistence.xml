<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="terragamePU" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>ru.terra.game.server.storage.jpa.entity.MapObject</class>
		<class>ru.terra.game.server.storage.jpa.entity.Maps</class>
		<class>ru.terra.game.server.storage.jpa.entity.Players</class>
		<shared-cache-mode>ALL</shared-cache-mode>
		<properties>
			<property name="eclipselink.jdbc.cache-statements" value="true" />
			<property name="eclipselink.logging.timestamp" value="true" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/terragame" />
			<property name="javax.persistence.jdbc.password" value="as" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.user" value="as" />
			<property name="eclipselink.ddl-generation" value="update" />
		</properties>
	</persistence-unit>
</persistence>
